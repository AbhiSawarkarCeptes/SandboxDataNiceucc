        <defaultConnectorLabel>Invalid status chosen</defaultConnectorLabel>
        <rules>
            <name>Status_set_to_Cleared</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>Selected_Status</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Cleared</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>Selected_GL_Date</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>Selected_Debit_Account</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>Selected_Payment_Towards</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Set_values_for_cleared_receipt</targetReference>
            </connector>
            <label>Status set to Cleared?</label>
        </rules>
        <rules>
            <name>Status_set_to_Sent_for_Banking</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>Selected_Status</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <elementReference>Status_ProcessedSentforBanking</elementReference>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>Selected_Cheque_Deposit_Date</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>Selected_Debit_Account</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Set_values_for_Sent_for_Banking</targetReference>
            </connector>
            <label>Status set to Sent for Banking?</label>
        </rules>
        <rules>
            <name>Status_set_to_PDC</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>Selected_Status</leftValueReference>
                <operator>EqualTo</operator>

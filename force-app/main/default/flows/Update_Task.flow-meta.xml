                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Send_Email_from_Task</targetReference>
            </connector>
            <label>If Customer Interest is true</label>
        </rules>
    </decisions>
    <formulas>
        <name>AddingDiscount</name>
        <dataType>Number</dataType>
        <expression>{!$Record.Amount_To_Be_Paid_In_Advance__c} + {!$Record.Discount_Amount__c}</expression>
        <scale>2</scale>
    </formulas>
    <formulas>
        <name>Verifybalance</name>
        <dataType>Number</dataType>
        <expression>if({!$Record.Booking__r.Full_Due__c}&gt;{!AddingDiscount},{!$Record.Amount_To_Be_Paid_In_Advance__c},{!$Record.Amount_To_Be_Paid_In_Advance__c} - {!$Record.Discount_Amount__c})</expression>

                            Unit__r.Tower__r.RDS_Company_Code__r.Name,Unit__r.Tower__r.RDS_Company_Code__r.Account_Number_Flat_Cost__c,Unit__r.Tower__r.RDS_Company_Code__r.MICR_Code_Flat_Cost__c,Unit__r.Tower__r.RDS_Company_Code__r.Bank_Name_Flat_Cost__c,Unit__r.Tower__r.RDS_Company_Code__r.Favouring__c,Unit__r.Tower__r.RDS_Company_Code__r.IBAN__c,Unit__r.Tower__r.Address__c, Unit__r.Project__r.Name, Unit__r.Chargeable_Area__c,Total_Agreement_Value_Demanded__c,Total_On_Account_Money_With_Registration__c,
                            Booking_Date__c, Agreement_Value__c, Tax_on_Purchase_Price__c ,TotalAmountPaid__c,Paid_Percentage__c, (SELECT Id,Booking__r.Total_On_Account_Money_With_Registration__c,Milestone_Name__c,Due_Date__c,Total_Amount_Demanded__c,Installment__c,Payment_Milestones__r.Charge1Percentage__c,Date_for_Late_Payment_Calculation__c,Demand_Age__c from Demands__r where Debit_Type__c = null ORDER BY Date_for_Late_Payment_Calculation__c ASC )
                            FROM Booking__c where Id = :bookingId ];

            Date sept13 = Date.newInstance(2022, 9, 13);
            if(booking.Booking_Date__c <= sept13){
                percentageValue = 1;
            }
            else{
                percentageValue = 2;
            }

            if(booking.Project__r.Name.contains('Siniya')){
                isSiniya = true;
            }else{
                isSiniya = false;
            }

            towerexception.addAll(system.label.TowerException_For_Demand.split(','));
            if(booking.Unit__r.Name != null && String.isNotBlank(booking.Unit__r.Name)){
                Ref = booking.Unit__r.Name + ', ';  
            }
            if((booking.Unit__r.Tower__r.Name != null) && (String.isNotBlank(booking.Unit__r.Tower__r.Name)) && (!towerexception.contains(booking.Unit__r.Tower__r.Name))){
                Ref += booking.Unit__r.Tower__r.Name + ', ';
            }
            if(booking.Unit__r.Tower__r.RDS_Company_Code__r.Name != null && String.isNotBlank(booking.Unit__r.Tower__r.RDS_Company_Code__r.Name)){
                Ref += booking.Unit__r.Tower__r.RDS_Company_Code__r.Name + ', ';
            }
            if(booking.Unit__r.Tower__r.Address__c != null && String.isNotBlank(booking.Unit__r.Tower__r.Address__c)){
                Ref += booking.Unit__r.Tower__r.Address__c;
            }
            if(Ref.substring(Ref.length()-2,Ref.length()-1) == ','){
                Ref = Ref.substring(0,Ref.length()-2);
            }
            
            System.debug('The Refer value is --'+ Ref);
            System.debug('The Refer length is --'+ Ref.length());
            //stem.debug('The Refer lenght-2 is --'+ Ref.length()-2);
            //stem.debug('The Refer lenght-1 is--'+ Ref.length()-1);
            System.debug('Refer values substr'+ Ref.substring(Ref.length()-2,Ref.length()-1));
            
            //Code for calculating the late payment for each demand
            demandList = [SELECT Id,Booking__r.Total_On_Account_Money_With_Registration__c,Milestone_Name__c,Due_Date__c,
                        Total_Amount_Demanded__c,Installment__c,Payment_Milestones__r.Charge1Percentage__c,
                        Date_for_Late_Payment_Calculation__c,Demand_Age__c,OutStanding_days_calculated__c,
                        No_of_days__c,No_of_Months__c,Interest_Charges__c,Balance_Amount__c From Demand__C
                        Where Payment_Milestones__c != Null and Demand_Status__c !='Reversed' AND Booking__c =: booking.id ORDER BY Date_for_Late_Payment_Calculation__c ASC ];
        
            totalAmount = 0;
            totalPurchasePrice = 0;
            totalInterest = 0;
            Double totalAgreementValueDemanded = (booking.Total_Agreement_Value_Demanded__c == null ? 0 : booking.Total_Agreement_Value_Demanded__c);
            Double TotalOnAccountMoneyWithRegistration = (booking.Total_On_Account_Money_With_Registration__c == null ? 0 : booking.Total_On_Account_Money_With_Registration__c);
            Double Total_InterestTillDate = (booking.Total_Interest_Till_Date__c == null ? 0 : booking.Total_Interest_Till_Date__c);
            Double VATOnInterestAmount = (booking.VAT_On_Interest_Amount__c == null ? 0 : booking.VAT_On_Interest_Amount__c);
            
            installDueAnne = (totalAgreementValueDemanded - TotalOnAccountMoneyWithRegistration);
            totalPaymentDue = installDueAnne + Total_InterestTillDate +VATOnInterestAmount;
            for(Demand__c demand : demandList){
                //installDuePer =  installDuePer + demand.Payment_Milestones__r.Charge1Percentage__c;
                if(demand.Total_Amount_Demanded__c != Null){
                    totalAmount += demand.Total_Amount_Demanded__c; 
                }
                if(demand.Payment_Milestones__r.Charge1Percentage__c != NUll) {
                    totalPurchasePrice += demand.Payment_Milestones__r.Charge1Percentage__c;
                }
                if(demand.Interest_Charges__c != NUll){
                    totalInterest += demand.Interest_Charges__c; 
                }
            
            }
            installDuePer = (totalPurchasePrice - booking.Paid_Percentage__c);
            
        } catch (Exception e) {
            ApexPages.addMessage(new ApexPages.Message(ApexPages.Severity.ERROR, 'Error in PDF LP Not Sent To Customer. Please check demand Manually render as pdf : Time : '+System.Now()+ ' - Error :'+e.getMessage() + ' - Line number :' +e.getLineNumber() + ' Stack Trace :' +e.getStackTraceString()));
        }
    }


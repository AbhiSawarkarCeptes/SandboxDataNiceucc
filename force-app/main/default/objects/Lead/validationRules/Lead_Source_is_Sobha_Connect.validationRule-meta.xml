<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Lead_Source_is_Sobha_Connect</fullName>
    <active>true</active>
    <description>If Lead Source Value is Sobha Connect then Sobha Connect Field Mandatory</description>
    <errorConditionFormula>AND 
( 
ISPICKVAL( LeadSource , &quot;Sobha Connect&quot;), 
ISBLANK(Sobha_Connect__c) 
)</errorConditionFormula>
    <errorMessage>Please fill the Sobha Connect</errorMessage>
</ValidationRule>

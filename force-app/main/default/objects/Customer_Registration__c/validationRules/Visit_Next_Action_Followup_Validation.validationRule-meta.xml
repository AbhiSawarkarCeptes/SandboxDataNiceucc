<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Visit_Next_Action_Followup_Validation</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
 ISPICKVAL(Visit_Next_Action__c , &apos;Follow up&apos;) ,
 ISBLANK(SM_Next_Action_Date__c ) 
)</errorConditionFormula>
    <errorDisplayField>SM_Next_Action_Date__c</errorDisplayField>
    <errorMessage>Please enter &apos;Next Action Date&apos;.</errorMessage>
</ValidationRule>
